<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="16dp">

    <ImageView
            android:layout_width="120dp"
            android:layout_height="72dp"
            app:srcCompat="@android:drawable/ic_dialog_info"
            android:id="@+id/ivArticleImage"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="6dp" />

    <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tvArticleTitle"
            android:textStyle="bold"
            android:textSize="20sp"
            android:singleLine="true"
            app:layout_constraintEnd_toEndOf="parent"
            android:textColor="#303030"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/ivArticleImage"
            app:layout_constraintHorizontal_bias="1.0"
            android:layout_marginStart="16dp" />

    <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/tvArticleDescription"
            app:layout_constraintTop_toBottomOf="@+id/tvArticleTitle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/tvSource"
            app:layout_constraintVertical_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/tvArticleTitle"
            android:layout_marginTop="8dp"
            android:textColor="#7F7F7F"
            android:maxLines="4" />

    <TextView
            android:text="TextView"
            android:layout_width="120dp"
            android:layout_height="20dp"
            android:id="@+id/tvSource"
            android:gravity="center"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/ivArticleImage"
            app:layout_constraintTop_toBottomOf="@+id/ivArticleImage"
            android:layout_marginTop="16dp"
            app:layout_constraintHorizontal_bias="0.666"
            android:textColor="#727272"
            app:layout_constraintEnd_toEndOf="@+id/ivArticleImage" />
</androidx.constraintlayout.widget.ConstraintLayout>